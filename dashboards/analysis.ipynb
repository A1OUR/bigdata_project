import pandas as pd
from sqlalchemy import create_engine
import plotly.express as px

# Подключение к БД из контейнера
engine = create_engine("postgresql://prefect:prefect@host.docker.internal:5432/climate_db")

df = pd.read_sql("SELECT * FROM climate_analytics", engine)

# Выбери несколько городов для графика
top_cities = df['city'].value_counts().head(10).index
filtered = df[df['city'].isin(top_cities)]

fig = px.line(
    filtered,
    x='year',
    y='avg_annual_temp',
    color='city',
    title='Среднегодовая температура по городам'
)
fig.show()